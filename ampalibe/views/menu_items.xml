<odoo>
    <data>

        <record id="action_ampalibe_config_settings" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_id" ref="res_config_settings_view_form" />
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'ampalibe', 'bin_size': False}</field>
        </record>
        <!-- Top menu item -->
        <menuitem name="Ampalibe" id="menu_root" groups="ampalibe.group_ampalibe_user" sequence="50" web_icon="ampalibe,static/description/icon.png" />

        <!-- Users -->
        <menuitem name="Users" id="menu_user" parent="menu_root" action="action_amp_user" />

        <!-- settings -->
        <menuitem name="Settings" id="menu_settings" parent="menu_root" groups="ampalibe.group_ampalibe_manager" />
        <menuitem name="Settings" id="menu_settings_general" parent="menu_settings" action="action_ampalibe_config_settings" />
    </data>
</odoo>